<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/public/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <% if (coffs.length > 0) { %>
        <div class="grid">
            <% for (let coffee of coffs) { %>
                <article class="card coffee-item">
                    <header class="card__header">
                        <h1 class="coffee__title"><%= coffee.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= coffee.imageUrl %>"
                             alt="<%= coffee.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="coffee__price">$<%= product.price %></h2>
                        <p class="coffee__description"><%= coffee.description %></p>
                    </div>
                    <div class="card__actions">
                        <%- include('../includes/add-to-cart.ejs', {coffee: coffee}) %>
                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Such Coffee Found!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>